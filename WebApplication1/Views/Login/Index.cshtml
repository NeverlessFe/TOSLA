@{
    Layout = null;
}
<!DOCTYPE html>
<html class="h-100" lang="en">

<head>

    <title>Create to PA</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/images/favicon.png">
    <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous"> -->

    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    <link href="~/Content/plugins/sweetalert/css/sweetalert.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/plugins/sweetalert/js/sweetalert.min.js"></script>

    <link href="~/Content/css/style.css" rel="stylesheet">
    <script src="~/Content/js/jquery.min.js"></script>


    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                var usernameSend = $("#txtUser").val();
                var passwordSend = $("#txtPass").val();

                $.ajax({
                    url: "LoginExec?Username="+usernameSend+"&Password="+passwordSend,
                    type: "post",
                    contentType: "application/json;charset=utf-8",
                    success: function (data) {
                        window.location.replace("/ConvertToPA/HomePage");
                        //if (data == "VALID") {
                        //    window.location.replace("/ConvertToPA/HomePage");
                        //} else {
                        //    swal("UnValid!", "Username & Password Invalid", "error");
                        //}
                    },
                    error: function (errormessage) {

                    }
                });
            });
        });
    </script>
</head>

<body class="h-100">

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
            <div class="loader">
                <svg class="circular" viewBox="25 25 50 50">
                    <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
                </svg>
            </div>
        </div>
    <!--*******************
        Preloader end
    ********************-->
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <div class="col-md-12" style="text-align:center;text-align:center;display:block;margin:auto;margin-top:10px;">
                                    <img src="~/Content/images/LogoB7.png" style="width:50%;height:50%;" />
                                    <a class="text-center" href="index.html"> <h4><b>Create to PA APPS</h4></a>
                                </div>
                                <form class="mt-5 mb-5 login-input">
                                    <div class="form-group">
                                        <input id="txtUser" type="text" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <input id="txtPass" type="password" class="form-control" placeholder="Password">
                                    </div>

                                </form>
                                <button id="btnLogin" class="btn login-form__btn submit w-100">Sign In</button>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/Content/plugins/common/common.min.js"></script>
    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Content/js/settings.js"></script>
    <script src="~/Content/js/gleek.js"></script>
    <script src="~/Content/js/styleSwitcher.js"></script>
</body>
</html>





